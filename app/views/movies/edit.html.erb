<h1>Edit Movie <%= @movie.id %></h1>

<form class="form-horizontal" action="/movies/update/<%= @movie.id %>">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-8">
      <input type="text" id="title" name="title" class="form-control" value="<%= @movie.title %>">
    </div>
  </div>

  <div class="form-group">
    <label for="year" class="col-sm-2 control-label">Year</label>
    <div class="col-sm-8">
      <input type="text" id="year" name="year" class="form-control" value="<%= @movie.year %>">
    </div>
  </div>

  <div class="form-group">
    <label for="duration" class="col-sm-2 control-label">Duration</label>
    <div class="col-sm-8">
      <input type="text" id="duration" name="duration" class="form-control" value="<%= @movie.duration %>">
    </div>
  </div>

  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-8">
      <textarea id="description" name="description" class="form-control" rows="8"><%= @movie.description %></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">Image URL</label>
    <div class="col-sm-8">
      <input type="text" id="image_url" name="image_url" class="form-control" value="<%= @movie.image_url %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update movie" class="btn btn-primary">
    </div>
  </div>
</form>
