<h1>Add New Movie</h1>

<form class="form-horizontal" action="/movies/add_row">
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-8">
      <input type="text" id="title" name="title" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="dob" class="col-sm-2 control-label">Year</label>
    <div class="col-sm-8">
      <input type="text" id="year" name="year" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="dob" class="col-sm-2 control-label">Duration</label>
    <div class="col-sm-8">
      <input type="text" id="duration" name="duration" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="bio" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-8">
      <textarea id="description" name="description" class="form-control" rows="8"></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">Image URL</label>
    <div class="col-sm-8">
      <input type="text" id="image_url" name="image_url" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Add Movie" class="btn btn-primary">
    </div>
  </div>
</form>
