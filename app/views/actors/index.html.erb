<a href="/actors/add" class="btn btn-primary">Add actor</a>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Biography</th>
      <th>Date of Birth</th>
      <th>View Details</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <% @actor.each do |actor| %>
    <tr>
      <td><img src="<%= actor.image_url %>" width="80"></td>
      <td><%= actor.name %></td>
      <td><%= truncate(actor.bio) %></td>
      <td><%= actor.dob %></td>
      <td><a href="/actors/<%= actor.id %>" class="btn btn-primary">View Details</a></td>
      <td><a href="/actors/<%= actor.id %>/edit" class="btn btn-primary">Edit</a></td>
      <td><a href="/actors/<%= actor.id %>/delete" class="btn btn-primary">Delete</a></td>
    </tr>
  <% end %>
</table>
